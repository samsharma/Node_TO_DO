<html>
  <head>
    <title>ToDo App</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <link href="/styles.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container">
      <h2>A Simple ToDo List App</h2>
      <form action="/addtask" method="POST">
        <div class="searchbar">
          <input type="text" name="newtask" placeholder="add new task" />
          <button>Add Task</button>
        </div>
        <div class="taskBox">
          <div class="addedTask">
              <div class="inner-task">
            <h2>Added Task</h2>
            <ul>
            <% for( var i = 0; i < task.length; i++){ %>
            
              <li>
                <input type="checkbox" name="check" value="<%= task[i] %>" />
                <%= task[i] %>
              </li>
              <% } %>
            </ul>
           
            </button>
            <% if(task.length == 0) { %>
              <h5>No New task</h5>
              <% }else{ %>
                <button formaction="/removetask" type="submit" id="top"> Complete Task
                </button>
                <%  }%>
          </form>
        </div>
          </div>
          <div class="completedTask">
            <form action="/addtaskagain" method="POST">
            <div class="inner-task">
            <h2>Completed task</h2>
            <ul>
              <% for(var i = 0; i < complete.length; i++){ %>
              <li><input  type="checkbox" name="checkagain" value="<%= complete[i] %>"  /><%= complete[i] %></li>
              <% } %>
            </ul>
            <% if(complete.length == 0) { %>
            <h5>No complete task</h5>
            <% }else{ %>
              <button formaction="/addTaskagain" type="submit" id="top">
                Add Task
              </button>
              <%  }%>
          </div>
          </div>
        </form>
        </div>
     
    </div>
  </body>
</html>
